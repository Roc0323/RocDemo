<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="cn.roc.rocdemo.Activity.FileOperationActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_new_folder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="创建文件夹"/>
        <Button
            android:id="@+id/btn_delete_folder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="删除该文件夹"/>
        <Button
            android:id="@+id/btn_new_text_file"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="创建文本文件"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_delete_folder_all_file"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="删除该文件夹下面所有的文件"/>
        <Button
            android:id="@+id/btn_image_save_local"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="网络图片保存到本地"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
       <Button
           android:id="@+id/btn_judge_folder_null"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="判断该文件夹是否为空"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_show_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            />
    </LinearLayout>


</LinearLayout>
