<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="cn.roc.rocdemo.activity.SocketTestActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn_tcp_connect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tcp连接"/>
            <Button
                android:id="@+id/btn_tcp_send_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tcp发送消息"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn_udp_send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Udp发送广播"/>
            <Button
                android:id="@+id/btn_udp_receive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Udp接收广播"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tv_socket_test1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="123"/>

        <TextView
            android:id="@+id/tv_socket_test2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="456"/>
    </LinearLayout>

</LinearLayout>
